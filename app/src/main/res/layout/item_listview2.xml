<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    >

    <ImageView
        android:id="@+id/list_view2_image1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@id/list_view2_tv3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/list_view2_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:textColor="@color/blackword"
        app:layout_constraintBottom_toTopOf="@id/list_view2_tv2"
        app:layout_constraintStart_toEndOf="@id/list_view2_image1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_view2_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        app:layout_constraintStart_toEndOf="@id/list_view2_image1"
        app:layout_constraintTop_toBottomOf="@id/list_view2_tv1" />

    <TextView
        android:id="@+id/list_view2_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/blackword"
        android:textSize="7pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_view2_image1" />

    <ImageView
        android:id="@+id/list_view2_image2"
        android:layout_marginTop="5pt"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/list_view2_tv3"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="8dp"
        android:background="#F7F7F8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/list_view2_image2"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>